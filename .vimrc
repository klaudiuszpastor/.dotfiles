set encoding=utf-8
set number
set relativenumber
syntax enable

" Use hard tabs with a tab width of 6 spaces
set noexpandtab
set tabstop=6
set shiftwidth=6

" Enable highlighting of the current line
set cursorline

" Ignore case in searches
set ignorecase

" Open splits below the current window
set splitbelow

" Keep 10 lines visible around the cursor
set scrolloff=10

" Enable true colors in the terminal
set termguicolors

set autoindent


